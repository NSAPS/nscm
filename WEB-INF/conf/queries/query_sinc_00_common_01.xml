	<!-- ITEM SEARCH POPUP : PAGING : 생산계획 미 반영 작업장 화면 용 -->
	<query id="item_search_popup_for_notuse_proc" paging="true"> 
			

			SELECT  IM.ITEM_ID, IM.ITEM_NAME, IM.SPEC
			  FROM  ITEM_MST IM, DUAL B
			 WHERE  IM.MADE_TYPE != 'DE'
			   AND  IM.ITEM_STATUS = 'ST'
			   --AND  IM.ITYPE = 'FERT' -- 완제품
			  [AND  UPPER(IM.ITEM_ID) || UPPER(IM.ITEM_NAME) LIKE UPPER('%${search_item_id}%')] 
			 ORDER  BY IM.ITEM_ID

			
	</query>

